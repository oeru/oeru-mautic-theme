{% extends ":"~template~":base.html.twig" %}

{% block content %}
    <style type="text/css">
        body {
            font-family: 'Open Sans', Verdana, Arial, sans-serif;
            color: #555555;
            height: 100% !important; margin: 0 !important;
            padding: 0 !important; width: 100% !important;
            -webkit-font-smoothing: antialiased !important;
            font-smoothing: antialiased !important;
        }
        .light { color: #cccccc !important; }
        .dark { color: #333333 !important; }
    </style>
    <div data-section-wrapper="1" style="border-bottom: 1px solid #aaaaaa;">
        <center>
            <table data-section="1" cellspacing="0" cellpadding="0" width="530" class="w320">
                <tr>
                    <td valign="top" style="text-align:left;" class="mobile-center" data-slot-container="1">
                        <div data-slot="image">
                            <img width="173" height="64" src="{{ getAssetUrl('themes/'~template~'/assets/oeru-logo.png', null, null, true) }}">
                        </div>
                    </td>
                </tr>
            </table>
        </center>
    </div>
    <div data-section-wrapper="1"  background="{{ getAssetUrl('themes/'~template~'/assets/stadium-faded.png', null, null, true) }}" bgcolor="#55555" valign="top"
        style="background: url({{ getAssetUrl('themes/'~template~'/assets/stadium-faded.png', null, null, true) }}) no-repeat center; background-color: #555555; background-position: center; border-bottom: 1px solid #aaaaaa;">
        <center>
            <table data-section="1" cellspacing="0" cellpadding="0" width="530" height="302" class="w320">
                <tr>
                    <td valign="top" style="vertical-align:top; padding-right: 15px; padding-left: 15px; text-align:left;" class="mobile-center" height="302" data-slot-container="1">
                        <div class="light" data-slot="text">
                            <h1>Title</h1>
                            <h2>Byline, with some more words</h2>
                        </div>
                    </td>
                </tr>
            </table>
        </center>
    </div>
    <div data-section-wrapper="1">
        <center>
            <table data-section="1" cellspacing="0" cellpadding="30" width="530" class="w290">
                <tr>
                    <td valign="top" data-slot-container="1">
                        <div data-slot="text">
                            <h3 style="text-align:center;">Enjoy 50% of your next purchase!</h3>
                            <br>

                            <table style="margin: 0 auto;" cellspacing="0" cellpadding="8" width="250">
                                <tr>
                                    <td style="border: 1px solid #a1a1a1; text-align:center;">
                                        Coupon Code: <span style="font-family: Courier;">4562789498</span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </td>
                </tr>
            </table>
            <table data-section="1" cellspacing="0" cellpadding="8" width="530" class="w320">
                <tr>
                    <td>
                        <table cellspacing="0" cellpadding="0" width="100%">
                            <tr>
                                <td class="mobile-padding" style="text-align:left;" data-slot-container="1">
                                    <div data-slot="separator"><hr/></div>
                                    <div data-slot="text">
                                        <br>
                                        We know it's only been a few months but since you've been gone, we've received a ton of amazing new products that we think you might like.
                                        <br><br>
                                        We hope you will give us another chance and come have look.
                                        <br>
                                        <br>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td class="mobile-padding" data-slot-container="1">
                        <div class="button" data-slot="button" data-param-padding-top="5" data-param-button-size="1" data-param-link-text="Come back!" data-param-href="http://" data-param-float="1" data-param-background-color="#3bcdc3" data-param-color="ffffff">
                            <a href="#" target="_blank" style="font-family:'Lato', Helvetica, Arial, sans-serif;font-weight:bold;font-size: 13px; color: #ffffff; text-decoration: none; text-decoration: none; padding: 12px 40px; background-color: #3bcdc3; display: inline-block;">
                                Come back!
                            </a>
                            <div style="clear:both"></div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <table cellspacing="0" cellpadding="25" width="100%">
                            <tr>
                                <td>
                                    &nbsp;
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </center>
    </div>
    <div data-section-wrapper="1" style="background-color:#c2c2c2;">
        <center>
            <table data-section="1" cellspacing="0" cellpadding="0" width="530" class="w320">
                <tr>
                    <td data-slot-container="1">
                        <div data-slot="text">
                            <table cellspacing="0" cellpadding="20" width="100%">
                                <tr>
                                    <td style="padding: 20px 0px; width: 33%; text-align: left;"><a href="https://oeru.org/contact-us/" style="font-family: 'Open Sans', Verdana, Arial, sans-serif; font-size:10px; line-height:20px; color:#212121; text-transform: uppercase; text-decoration:underline;" target="_blank">Contact Us</a></td>
                                    <td style="padding: 20px 0px; width: 34%; text-align: center;">
                                        <a href="http://creativecommons.org/licenses/by-sa/4.0/" rel="license" title="The content in this email is copyright the OER Foundation, and is licenced under CC-By-SA 4.0 or later."><img alt="Creative Commons License" src="{{ getAssetUrl('themes/'~template~'/assets/cc-by.png', null, null, true) }}" style="border-width: 0px;" class="fr-fic fr-dii"></a>
                                    </td>
                                    <td style="padding: 20px 0px; width: 33%; text-align: right;"><a href="{unsubscribe_url}" style="font-family: 'Open Sans', Verdana, Arial, sans-serif; font-size:10px; line-height:20px; color:#212121; text-transform: uppercase; text-decoration:underline;" target="_blank">Unsubscribe</a></td>
                                </tr>
                            </table>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td height="40" style="font-size: 40px; line-height: 40px;">&nbsp;</td>
                </tr>
            </table>
        </center>
    </div>
{% endblock %}
